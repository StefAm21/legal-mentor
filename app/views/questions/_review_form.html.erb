<%= form_with(url: questions_path, method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.select :rating, (1..5).to_a, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: 'form-control' %>
  </div>
  <%= form.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
