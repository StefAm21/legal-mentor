<div class="container">
  <div class="row mb-4 mt-4">
    <div class="col">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title"><%= @question.title %></h2>
          <p class="card-text"><%= @question.description %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <% @question.answers.each do |answer| %>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title">
              <%= answer.user.name %>
            </h5>
            <div class="d-flex align-items-center">
              <img src="https://via.placeholder.com/25" alt="avatar" class="rounded-circle mr-2">
              <%# <span>User Name</span> %>
            </div>
          </div>
          <p class="card-text"><%= answer.comment %></p>
          <p class="card-text d-flex align-items-center justify-content-between">
            <span class="mr-3">Tiempo de respuesta estimado: <br> <b><%= answer.avg_time %> hora/s</b></span>
            <span class="mr-3">Precio: <b>$<%= answer.price %></b></span>
          </p>
          <p class="card-text d-flex align-items-center justify-content-between">
            <span class="mr-3">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
              <span class="ml-2"> (4.5) </span>
            </span>
            <%= link_to 'Ver mas', question_answer_path(@question, answer) , class: 'btn btn-primary' %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
