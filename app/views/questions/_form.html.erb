<%= simple_form_for @question do |f| %>
  <%= f.input :title, label: "Pregunta", required: true%>
  <%= f.input :description, label: "Descripción", required: true %>
  <%# <%= f.input :category, label: "Categoría", required: true %>
  <%= f.collection_select :category, Category.all, :id, :name, {prompt: "Selecciona una categoría"}, {class: "form-control", required: true} %>
  <%= f.button :submit, class: "btn btn-flat", value:"Publicar pregunta" %>
<% end %>
